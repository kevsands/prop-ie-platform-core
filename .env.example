# Enterprise Environment Configuration Template
# Copy this file to .env.local for local development

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/prop_ie_db
DB_CONNECTION_TIMEOUT=5000
DB_POOL_SIZE=10
DB_MAX_CONNECTION_ATTEMPTS=3

# AWS Amplify Configuration
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_TEMPORARY
NEXT_PUBLIC_COGNITO_CLIENT_ID=TEMPORARY_CLIENT_ID
NEXT_PUBLIC_AWS_REGION=us-east-1

# Security Settings
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
SECURE_COOKIES=false

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=

# Feature Flags
ENABLE_AUTH=true
ENABLE_MULTI_TENANCY=false
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
ENABLE_CACHE=true

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@prop.ie

# AWS S3 Configuration for File Upload
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=prop-ie-documents

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES_PER_UPLOAD=10

# Third-party Services
GOOGLE_MAPS_API_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
ANALYTICS_ID=

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
WEBPACK_ANALYZE=false