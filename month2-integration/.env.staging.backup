# Staging Environment Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=staging

# Staging Database Connection (Local PostgreSQL for testing)
DATABASE_URL="postgresql://postgres:password@localhost:5432/propie_staging_local?schema=public"
SHADOW_DATABASE_URL="postgresql://postgres:password@localhost:5432/propie_staging_shadow?schema=public"

# Staging Configuration
SECURITY_ENHANCED=true
ALLOW_MOCK_AUTH=true
DATABASE_PROVIDER=postgresql

# AWS Amplify / Cognito Configuration (Staging placeholders)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_STAGING
NEXT_PUBLIC_COGNITO_CLIENT_ID=STAGING_CLIENT_ID

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=staging-secret-key-for-testing-only-not-production
JWT_SECRET=staging-jwt-secret-for-testing-only-not-production

# Performance and Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Build Configuration
BUILD_ID=staging-local-test