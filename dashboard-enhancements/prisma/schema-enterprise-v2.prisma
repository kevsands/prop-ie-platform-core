// Buyer Journey Management - Core FTB functionality
model BuyerJourney {
  id            String      @id @default(cuid())
  buyer         User        @relation("BuyerJourney", fields: [buyerId], references: [id])
  buyerId       String      @unique // Each buyer has one active journey
  currentPhase  BuyerPhase  @default(PLANNING)
  startDate     DateTime    @default(now())
  lastUpdated   DateTime    @updatedAt
  targetMoveInDate DateTime?
  targetProperty Unit?      @relation("BuyerTargetProperty", fields: [targetPropertyId], references: [id])
  targetPropertyId String?
  notes         String?     @db.Text
  
  // Enterprise fields
  organizationId String?    // Multi-tenant support
  assignedAgent  String?    // Agent ID if applicable
  priority       JourneyPriority @default(STANDARD)
  
  // Status tracking
  completionPercentage Int @default(0) // 0-100
  milestonesCompleted  Int @default(0)
  totalMilestones     Int @default(8)  // Planning through Post-Purchase
  
  // Relations
  phaseHistory        BuyerPhaseHistory[]
  affordabilityChecks AffordabilityCheck[]
  
  // Timestamps
  createdAt           DateTime @default(now())
  
  @@index([buyerId, currentPhase])
  @@index([currentPhase, lastUpdated])
}

enum BuyerPhase {
  PLANNING            // Research, education, affordability
  FINANCING           // Mortgage approval, HTB application  
  PROPERTY_SEARCH     // Viewing properties, selecting options
  RESERVATION         // Reserving a property, paying deposit
  LEGAL_PROCESS       // Contracts, legal work
  CONSTRUCTION        // For new builds: watching construction progress
  COMPLETION          // Closing, funds transfer
  POST_PURCHASE       // Moving in, settling, warranty period
}

enum JourneyPriority {
  LOW
  STANDARD  
  HIGH
  VIP
}

model BuyerPhaseHistory {
  id            String       @id @default(cuid())
  journey       BuyerJourney @relation(fields: [journeyId], references: [id])
  journeyId     String
  phase         BuyerPhase
  startDate     DateTime     @default(now())
  endDate       DateTime?
  completedTasks Json?       // Store completed tasks within the phase
  notes         String?      @db.Text
  completedBy   String?      // User ID who completed this phase
  
  @@index([journeyId, phase])
}

model AffordabilityCheck {
  id                 String       @id @default(cuid())
  journey            BuyerJourney @relation(fields: [journeyId], references: [id])
  journeyId          String
  
  // Input values
  grossAnnualIncome  Decimal      @db.Decimal(10, 2)
  partnerIncome      Decimal?     @db.Decimal(10, 2)
  monthlyDebts       Decimal      @db.Decimal(8, 2)
  depositAmount      Decimal      @db.Decimal(10, 2)
  htbAmount          Decimal?     @db.Decimal(10, 2)
  
  // Calculated values  
  maxMortgage        Decimal      @db.Decimal(10, 2)
  maxPropertyPrice   Decimal      @db.Decimal(10, 2)
  monthlyRepayment   Decimal      @db.Decimal(8, 2)
  loanToValue        Decimal      @db.Decimal(5, 2) // Percentage
  debtToIncomeRatio  Decimal      @db.Decimal(5, 2) // Percentage
  
  // Context
  lender             String?
  calculatorUsed     String?      // Which lender's calculator
  currency           String       @default("EUR")
  
  // Metadata
  notes              String?      @db.Text
  isValid            Boolean      @default(true)
  validUntil         DateTime?    // Some calculations expire
  
  // Timestamps
  created            DateTime     @default(now())
  
  @@index([journeyId, created])
}
