  },
};

export default function EmojiPicker({ onEmojiSelect }: EmojiPickerProps) {
  const [search, setSearch] = useState('');
  const [selectedCategory, setSelectedCategory] = useState('recent');

  const searchEmojis = (query: string) => {
    if (!query) return null;

    const results: string[] = [];
    Object.values(emojiCategories).forEach(category => {
      category.emojis.forEach(emoji => {
        if (emoji.includes(query)) {
          results.push(emoji);
        }
      });
    });
    return results;
  };

  const searchResults = searchEmojis(search);
  const displayEmojis = searchResults || (emojiCategories[selectedCategory as keyof typeof emojiCategories]?.emojis || []);

  return (
    <div className="w-full">
      <div className="p-2 border-b">
        <div className="relative">
          <MagnifyingGlassIcon className="absolute left-2 top-1/2 -translate-y-1/2 h-4 w-4 text-gray-400" />
          <Input
            type="text"
            placeholder="Search emojis..."
            value={search}
            onChange={(e) => setSearch(e.target.value)}
            className="pl-8 h-8"
          />
        </div>
      </div>

      {!search && (
        <Tabs value={selectedCategory} onValueChange={setSelectedCategory}>
          <TabsList className="w-full rounded-none border-b h-9">
            {Object.entries(emojiCategories).map(([key, category]) => (
              <TabsTrigger key={key} value={key} className="flex-1 text-xs py-1">
                {category.emojis[0]}
              </TabsTrigger>
            ))}
          </TabsList>
        </Tabs>
      )}

      <ScrollArea className="h-64 p-2">
        <div className="grid grid-cols-8 gap-1">
          {displayEmojis.map((emoji, index) => (
            <Button
              key={`${emoji}-${index}`}
              variant="ghost"
              size="sm"
              className="h-8 w-8 p-0 hover:bg-gray-100"
              onClick={() => onEmojiSelect(emoji)}
            >
              <span className="text-lg">{emoji}</span>
            </Button>
          ))}
        </div>
      </ScrollArea>
    </div>
  );
}