/**
 * Configuration Type Definitions
 * 
 * This file defines configuration-related types that are used across the application.
 */

import { ID } from './index';

/**
 * Application environment configuration
 */
export interface EnvironmentConfig {
  /** Application name */
  appName: string;
  /** Environment name */
  environment: 'development' | 'test' | 'staging' | 'production';
  /** API URL */
  apiUrl: string;
  /** Whether to enable debug mode */
  debug: boolean;
  /** Application version */
  version: string;
  /** Build timestamp */
  buildTimestamp: string;
  /** AWS region */
  awsRegion: string;
  /** Auth configuration */
  auth: {
    /** User pool ID */
    userPoolId?: string;
    /** User pool web client ID */
    userPoolWebClientId?: string;
    /** OAuth configuration */
    oauth?: {
      /** Domain */
      domain?: string;
      /** Scope */
      scope?: string[];
      /** Redirect sign in */
      redirectSignIn?: string;
      /** Redirect sign out */
      redirectSignOut?: string;
      /** Response type */
      responseType?: string;
    };
  };
  /** API Gateway configuration */
  api: {
    /** API endpoints */
    endpoints: Array<{
      /** API name */
      name: string;
      /** API endpoint */
      endpoint: string;
      /** API region */
      region?: string;
      /** Whether to use IAM authentication */
      useIAM?: boolean;
    }>
  );
  };
  /** Storage configuration */
  storage: {
    /** S3 bucket name */
    bucket?: string;
    /** S3 region */
    region?: string;
    /** Level of storage (public, protectedprivate) */
    level?: 'public' | 'protected' | 'private';
    /** CORS configuration */
    cors?: boolean;
  };
  /** Analytics configuration */
  analytics?: {
    /** Whether to enable analytics */
    enabled: boolean;
    /** Provider */
    provider?: string;
    /** Tracking ID */
    trackingId?: string;
    /** Whether to enable auto page view tracking */
    autoTrack?: boolean;
  };
  /** Feature flags */
  features: Record<string, boolean>
  );
}

/**
 * Theme configuration
 */
export interface ThemeConfig {
  /** Primary color */
  primaryColor: string;
  /** Secondary color */
  secondaryColor: string;
  /** Accent color */
  accentColor: string;
  /** Background color */
  backgroundColor: string;
  /** Text color */
  textColor: string;
  /** Font family */
  fontFamily: string;
  /** Border radius size */
  borderRadius: string;
  /** Spacing unit base (in px) */
  spacingUnit: number;
  /** Custom themes */
  customThemes?: Record<string, Partial<ThemeConfig>>
  );
  /** Dark mode settings */
  darkMode: {
    /** Whether dark mode is enabled */
    enabled: boolean;
    /** Dark mode primary color */
    primaryColor: string;
    /** Dark mode background color */
    backgroundColor: string;
    /** Dark mode text color */
    textColor: string;
  };
}

/**
 * Developer portal configuration
 */
export interface DeveloperConfig {
  /** Company name */
  companyName: string;
  /** Company logo URL */
  logo: string;
  /** Brand color palette */
  brandColors: {
    /** Primary color */
    primary: string;
    /** Secondary color */
    secondary: string;
    /** Accent color */
    accent: string;
  };
  /** Contact information */
  contact: {
    /** Support email */
    supportEmail: string;
    /** Sales email */
    salesEmail: string;
    /** Phone number */
    phone: string;
    /** Website */
    website: string;
  };
  /** Social media links */
  socialMedia?: {
    /** Twitter/X link */
    twitter?: string;
    /** Facebook link */
    facebook?: string;
    /** LinkedIn link */
    linkedin?: string;
    /** Instagram link */
    instagram?: string;
  };
  /** Default settings */
  defaults: {
    /** Default currency */
    currency: string;
    /** Default language */
    language: string;
    /** Default contract terms URL */
    contractTermsUrl: string;
    /** Default privacy policy URL */
    privacyPolicyUrl: string;
  };
}

/**
 * Feature flag configuration
 */
export interface FeatureFlags {
  /** Whether the feature is enabled */
  enabled: boolean;
  /** Feature flag ID */
  id: ID;
  /** Feature flag name */
  name: string;
  /** Feature flag description */
  description?: string;
  /** Environments where this flag is active */
  environments: Array<'development' | 'test' | 'staging' | 'production'>
  );
  /** Percentage rollout (0-100) */
  rolloutPercentage?: number;
  /** User IDs that this flag is enabled for (override) */
  enabledForUsers?: string[];
  /** User IDs that this flag is disabled for (override) */
  disabledForUsers?: string[];
  /** User roles that this flag is enabled for */
  enabledForRoles?: string[];
  /** When this flag was created */
  createdAt: string;
  /** When this flag was last updated */
  updatedAt: string;
  /** Who created this flag */
  createdBy?: string;
  /** Whether this flag is marked for permanent enablement */
  permanentlyEnabled?: boolean;
  /** Whether this flag is deprecated */
  deprecated?: boolean;
  /** Variables associated with this feature flag */
  variables?: Record<string, any>
  );
}

/**
 * Security configuration
 */
export interface SecurityConfig {
  /** Whether Content Security Policy is enabled */
  cspEnabled: boolean;
  /** Whether to enable CSRF protection */
  csrfProtection: boolean;
  /** XSS protection settings */
  xssProtection: {
    /** Whether XSS protection is enabled */
    enabled: boolean;
    /** Sanitization level */
    sanitizationLevel: 'basic' | 'strict';
  };
  /** Rate limiting settings */
  rateLimit: {
    /** Whether rate limiting is enabled */
    enabled: boolean;
    /** Maximum number of requests */
    maxRequests: number;
    /** Window size in seconds */
    windowSizeSeconds: number;
  };
  /** Authentication settings */
  authentication: {
    /** Whether to use multi-factor authentication */
    mfaEnabled: boolean;
    /** Whether to use trusted devices */
    trustedDevices: boolean;
    /** Session timeout in minutes */
    sessionTimeoutMinutes: number;
    /** Maximum number of failed login attempts */
    maxFailedLoginAttempts: number;
    /** Lockout period in minutes */
    lockoutPeriodMinutes: number;
    /** Password policy */
    passwordPolicy: {
      /** Minimum length */
      minLength: number;
      /** Whether to require lowercase letters */
      requireLowercase: boolean;
      /** Whether to require uppercase letters */
      requireUppercase: boolean;
      /** Whether to require numbers */
      requireNumbers: boolean;
      /** Whether to require special characters */
      requireSpecialChars: boolean;
      /** Password expiry in days */
      expiryDays: number;
      /** Prevent password reuse count */
      preventReuse: number;
    };
  };
  /** API security settings */
  api: {
    /** Whether to use API keys */
    useApiKeys: boolean;
    /** Whether to validate JWT tokens */
    validateJwt: boolean;
    /** Use HTTPS only */
    httpsOnly: boolean;
  };
}

/**
 * API client configuration
 */
export interface ApiClientConfig {
  /** Base URL */
  baseUrl: string;
  /** API version */
  apiVersion: string;
  /** Default request timeout in milliseconds */
  timeout: number;
  /** Whether to include credentials */
  withCredentials: boolean;
  /** Default headers */
  defaultHeaders: Record<string, string>
  );
  /** Retry configuration */
  retry: {
    /** Maximum number of retries */
    maxRetries: number;
    /** Retry delay in milliseconds */
    retryDelay: number;
    /** Whether to use exponential backoff */
    useExponentialBackoff: boolean;
  };
  /** Cache configuration */
  cache: {
    /** Whether caching is enabled */
    enabled: boolean;
    /** Cache storage method */
    storageMethod: 'memory' | 'localStorage' | 'sessionStorage';
    /** Default cache TTL in seconds */
    ttl: number;
  };
  /** Logging configuration */
  logging: {
    /** Whether logging is enabled */
    enabled: boolean;
    /** Log level */
    logLevel: 'error' | 'warn' | 'info' | 'debug';
    /** Whether to log requests */
    logRequests: boolean;
    /** Whether to log responses */
    logResponses: boolean;
  };
}

/**
 * Analytics configuration
 */
export interface AnalyticsConfig {
  /** Whether analytics is enabled */
  enabled: boolean;
  /** User tracking settings */
  userTracking: {
    /** Whether user tracking is enabled */
    enabled: boolean;
    /** Whether to collect user IDs */
    collectUserId: boolean;
    /** Whether to track sessions */
    trackSessions: boolean;
  };
  /** Performance tracking settings */
  performanceTracking: {
    /** Whether performance tracking is enabled */
    enabled: boolean;
    /** Whether to track page load times */
    trackPageLoad: boolean;
    /** Whether to track API call times */
    trackApiCalls: boolean;
  };
  /** Event tracking settings */
  eventTracking: {
    /** Whether event tracking is enabled */
    enabled: boolean;
    /** Events to track automatically */
    autoTrackEvents: string[];
  };
  /** Providers */
  providers: Array<{
    /** Provider name */
    name: string;
    /** Provider ID */
    id: string;
    /** Whether this provider is enabled */
    enabled: boolean;
    /** Provider configuration */
    config: Record<string, any>
  );
  }>
  );
}

/**
 * Cache configuration
 */
export interface CacheConfig {
  /** Whether caching is enabled */
  enabled: boolean;
  /** Default cache TTL in seconds */
  defaultTtl: number;
  /** Cache provider */
  provider: 'memory' | 'local-storage' | 'session-storage' | 'redis';
  /** Maximum number of cache entries */
  maxEntries: number;
  /** Whether to auto-invalidate on mutations */
  autoInvalidateOnMutation: boolean;
  /** Cache scopes */
  cacheScopes: Array<{
    /** Scope name */
    name: string;
    /** TTL for this scope in seconds */
    ttl: number;
    /** Whether this scope is enabled */
    enabled: boolean;
  }>
  );
}

/**
 * Notification settings
 */
export interface NotificationConfig {
  /** Whether in-app notifications are enabled */
  inAppEnabled: boolean;
  /** Whether email notifications are enabled */
  emailEnabled: boolean;
  /** Whether push notifications are enabled */
  pushEnabled: boolean;
  /** Whether SMS notifications are enabled */
  smsEnabled: boolean;
  /** Default notification settings by type */
  defaultSettings: Record<string, {
    /** Whether this notification type is enabled */
    enabled: boolean;
    /** Channels for this notification type */
    channels: Array<'inApp' | 'email' | 'push' | 'sms'>
  );
  }>
  );
}

/**
 * Document template configuration
 */
export interface DocumentTemplateConfig {
  /** Document templates */
  templates: Array<{
    /** Template ID */
    id: ID;
    /** Template name */
    name: string;
    /** Template description */
    description?: string;
    /** Template type */
    type: 'contract' | 'legal' | 'marketing' | 'other';
    /** Template file URL */
    fileUrl: string;
    /** Template variables */
    variables: Array<{
      /** Variable key */
      key: string;
      /** Variable description */
      description: string;
      /** Variable type */
      type: 'string' | 'number' | 'boolean' | 'date';
      /** Whether this variable is required */
      required: boolean;
      /** Default value */
      defaultValue?: any;
    }>
  );
  }>
  );
}