              <div className="h-6 w-px bg-gray-300" />
              <h1 className="font-bold text-lg">First-Time Buyers Hub</h1>
            </div>

            {/* Mobile menu button */}
            <button
              onClick={() => setMobileMenuOpen(!mobileMenuOpen)}
              className="md:hidden p-2 rounded-md hover:bg-gray-100"
