      {/* Featured Properties Section */}
      <section
        aria-labelledby="featured-properties-heading"
        className="py-16 bg-gray-50"
      >
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center mb-12">
            <h2
