# Enterprise Platform Environment Configuration
# Auto-configured for immediate startup
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database - Using SQLite for development simplicity
DATABASE_URL=file:./dev.db

# AWS Amplify/Cognito - Mock configuration for development
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_TEMPORARY
NEXT_PUBLIC_COGNITO_CLIENT_ID=TEMPORARY_CLIENT_ID
NEXT_PUBLIC_IDENTITY_POOL_ID=us-east-1:TEMPORARY-POOL-ID
NEXT_PUBLIC_S3_BUCKET=prop-ie-dev-bucket
NEXT_PUBLIC_AWS_USER_POOLS_ID=us-east-1_TEMPORARY
NEXT_PUBLIC_AWS_USER_POOLS_WEB_CLIENT_ID=TEMPORARY_CLIENT_ID

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=enterprise-dev-secret-2024
JWT_SECRET=enterprise-jwt-secret-2024
JWT_REFRESH_SECRET=enterprise-jwt-refresh-2024

# Security - Development mode
CSRF_SECRET=dev-csrf-secret
